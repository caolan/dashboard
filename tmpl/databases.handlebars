<div id="main">
  <div class="container-fluid">

    {{#if databases}}
    <table class="table table-striped table-databases">
      <thead>
      <tr>
        <th>Name</th>
      </tr>
      </thead>
      <tbody>
        {{#each databases}}
        <tr>
          <td>
            <a title="{{db}}/{{name}}" href="{{url}}">
              {{#if dashicon}}
              <img class="icon" alt="Icon" src="{{ddoc_url}}/{{dashicon}}" />
              {{else}}
              <img class="icon" alt="Icon" src="img/icons/default_22.png" />
              {{/if}}
            </a>
            <a class="title" title="{{db}}/{{name}}" href="{{url}}">
              {{#if title}}{{title}}{{else}}{{name}}{{/if}}
            </a>
            <span class="db">
              {{db}}
            </span>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{/if}}

  </div>
</div>

<div class="admin-bar visible-admin">
  <div class="admin-bar-inner">
    <div id="admin-bar-status"></div>
    <div id="admin-bar-controls">
      <a id="databases-add-btn" class="btn btn-success" href="#">
        <i class="icon-plus-sign"></i> Add new
      </a>
      <a id="databases-refresh-btn" class="btn btn-primary" href="#">
        <i class="icon-refresh"></i> Refresh list
      </a>
    </div>
  </div>
</div>
